{
  "name": "js-jest-boilerplate",
  "author": "Kevin Hierro",
  "version": "1.0.0",
  "type": "module",
  "description": "tdd-example-javascript",
  "directories": {
    "src": "src",
    "test": "test"
  },
  "scripts": {
    "test": "jest --watchAll --verbose",
    "clear-jest": "jest --clearCache",
    "cy:run": "cypress run",
    "server": "node server.js",
    "e2e": "npm run cy:run -- --e2e",
    "e2e-browser": "npm run cy:run -- --e2e --headed"
  },
  "devDependencies": {
    "@testing-library/cypress": "^9.0.0",
    "@types/jest": "^29.5.0",
    "cypress": "^12.8.1",
    "express": "^4.18.2",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
